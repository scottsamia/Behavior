@model Behavior.Models.FirebaseViewModels.AddStudentViewModel

@{
    ViewData["Title"] = "Add Student";
}

<h2>Add Student</h2>

<form asp-action="AddStudent">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Behaviors" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select name="Behaviors"
                        id="Behaviors"
                        multiple class="form-control">
                    <option value="1">Nervous Tick</option>
                    <option value="2">Anger</option>
                    <option value="3">Happy</option>
                </select>
                <span asp-validation-for="Behaviors" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Create" class="btn btn-default" />*@
                <button type="button" id="addUser" class="btn btn-default btn-lg btn-block">Add User</button>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var fireBaseRef = behavior.firebase;

        fireBaseRef.init();

        var database = fireBaseRef.database;
        var student = behavior.student;

        //student.init(database, "3");

    </script>
}
